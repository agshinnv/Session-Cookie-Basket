@model CategoryDetailVM  

@{
    ViewData["Title"] = "Detail";

}

<div class="container">
    <div class="form-group">
        <label class="col-md-12" style="font-weight:700">Category Name</label>
        <div class="col-md-12 mt-3">
            <input asp-for="Name" type="text" disabled placeholder="Write category name..." class="form-control form-control-line" />
        </div>
    </div>
    @if(Model.ProductCount != 0)
    {
        <h3>Product count : @Model.ProductCount</h3>
    }else{
        <h2>No products added...</h2>
    }

    <div class="form-group mt-3">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>
</div>

