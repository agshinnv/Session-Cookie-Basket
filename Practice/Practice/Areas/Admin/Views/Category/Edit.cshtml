@model CategoryEditVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <form class="form-horizontal form-material mx-2" method="post" asp-action="Edit">
        <div class="form-group">
            <label class="col-md-12" style="font-weight:700">Category Name</label>
            <div class="col-md-12 mt-3">
                <input asp-for="Name" type="text" maxlength="100" placeholder="Write category name..." class="form-control form-control-line" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Submit</button>
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </form>
</div>


